br
.row
  .col-xs-12
    h2.page-header
      | Add Payment
    .form-inline
      = form_for @invoice, url: users_invoice_path(@invoice), role: 'form' do |f|
        = f.fields_for :payments, Payment.new do |p| 
          = p.hidden_field :account_id, value: current_account.id
          .form-group
            = p.number_field :amount, required: true, placeholder: 'Amount', class: 'form-control', step: :any
          .form-group
            = p.text_field :reference, required: true, placeholder: 'Payment Reference', class: 'form-control'
          .form-group
            = p.date_field :at, value: Date.today, required: true, class: 'form-control'
        '  
        button.btn.btn-primary.btn-flat type="submit" Submit
